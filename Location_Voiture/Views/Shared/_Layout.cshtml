@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Location_Voiture</title>
  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">Gestion-Location</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                      @if (Context.Session.GetString("Nom") == null && Context.Session.GetString("Prenom") == null)
                        {
                             <li class="nav-item">
                                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "User")'">Inscription </button>
                             </li>
                            <li class="nav-item">
                                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Login", "User")'">Login </button>
                            </li>
                        }
                    </ul>
                        @if(Context.Session.GetString("Nom") != null && Context.Session.GetString("Prenom") != null)
                        {
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Menu Location
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item"  asp-action="Index" asp-controller="Voiture">Voiture</a>
                                    <a class="dropdown-item"  asp-action="Index" asp-controller="Assurances">Assurance</a>
                                    <a class="dropdown-item"  asp-action="Index" asp-controller="Marque">Marque</a>
                                </div>
                            </div>
                       
                            <form class="d-flex">
                                <a class="nav-link disabled" tabindex="-1" aria-disabled="true">
                                    @Context.Session.GetString("Nom")|@Context.Session.GetString("Prenom")|[@Context.Session.GetString("Role")]
                                </a>
                                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Logout", "User")'">Logout </button>
                            </form>
                        }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            2023 - Location_Voiture - <a asp-area="" asp-controller="Home" asp-action="Privacy">Achraf mimouni</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
